{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "cypress"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "paths": {
      "@/*": ["./src/*"],
      "@store/*": ["./src/store/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "public"]
}
